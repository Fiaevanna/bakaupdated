---
import headerImage from "../assets/images/headerprofile/headerImage.jpg";
import "@fontsource/rubik-wet-paint";

---

<header class="header">
  <div class="header__content">
    <nav class="header__nav">
      <a class="header__nav-item header__nav-item--active" href="/">Home</a>
      <a class="header__nav-item" href="/products">Products</a>
      <a class="header__nav-item" href="/about">About us</a>
      <a class="header__nav-item" href="/contact">Contact us</a>
      <a class="header__nav-item" href="/cart">Cart</a>
    </nav>
    <h1 class="header__title">Clothes for "BAKA"</h1>
    <div class="header__cta">
      <slot/>
    </div>
  </div>
  <div class="header__image">
    <img src={headerImage.src} alt="Header background image" />
  </div>
</header>

<style lang="scss">
  .header {
    position: relative;
    padding-top: 10px;

    &__image {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-color: black;

      img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        opacity: 0.7;
      }
    }

    &__content {
      display: flex;
      z-index: 1;
      position: relative;
      flex-direction: column;
      align-items: center;
    }

    &__nav {
      display: flex;
      justify-content: space-between;
      min-width: 350px;
    }

    &__nav-item {
      color: #ffffff;
      font-weight: bold;
      text-decoration: none;
      margin-top: 10px;
      font-size: 17px;

      &--active {
        text-decoration: underline;
      }
    }

    &__title {
      font-family: "Rubik Wet Paint", serif;
      font-size: 30px;
      -webkit-text-stroke-width: 1px;
      -webkit-text-stroke-color: #ccccc6;
    }

    &__cta {
      position: relative;
      top: 10px;
    }
  }
</style>
