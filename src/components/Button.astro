---
interface Props {
  class: string;
}
const { class: extraClass, ...rest } = Astro.props;
---

<button class={extraClass} {...rest}>
  <slot />
</button>

<style lang="scss">
  .button {
    background-color: #8b8d84;
    color: rgb(0, 0, 0);
    opacity: 10;
    margin-top: 1px;
    padding: 15px;
    font-family: "Share Tech Mono", monospace;
    border: 1px solid black;
    border-radius: 10px;
    font-size: 16px;
    font-weight: bold;
  }
</style>
