---
import BaseLayout from "../layout/BaseLayout.astro";
import ProductItem from "../components/ProductItem.astro";

// images
import sandShirtFront from "../assets/images/Person1/sand1.png";
import sandShirtFrontV2 from "../assets/images/Person1/sand2.png";
import sandShirtBack from "../assets/images/Person1/sand3.webp";
import sandShirtFrontV3 from "../assets/images/Person1/homepic1.png";
import sandShirtBackV2 from "../assets/images/Person1/sand5.webp";


const productImages = [
  {
    id: 1,
    imageUrl: sandShirtFront.src,
    isActive: true,
  },
  {
    id: 2,
    imageUrl: sandShirtFrontV2.src,
    isActive: false,
  },
  {
    id: 3,
    imageUrl: sandShirtBack.src,
    isActive: false,
  },
  {
    id: 4,
    imageUrl: sandShirtFrontV3.src,
    isActive: false,
  },
  {
    id: 5,
    imageUrl: sandShirtBackV2.src,
    isActive: false,
  },
];
---

<BaseLayout activeHref={"/products"}>
<div slot="main" class="layout">
  <ProductItem
  images={productImages}
  title={`Baka Sand Hoodie`}
  price="1 756.00 kr"
  sizes={["XS", "S", "M", "L", "XL"]}
  originalPrice="2 195,00 kr "
  discountPercantage=" -20%"
/>

</div>
 
</BaseLayout>

<style lang="scss">
  @import "../styles/_variables.scss";

  .layout{
    padding-bottom: 50px;

  }
</style>
