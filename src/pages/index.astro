---
import landingpageImageOne from "../assets/images/headerimages/headerImageOne.png";
import landingpageImageTwo from "../assets/images/headerimages/headerImageTwo.png";
import Button from "../components/Button.astro";
import BaseLayout from "../layout/BaseLayout.astro";
---

<BaseLayout>
  <a href="/products" slot="header-cta"> <Button>Get Yours Now!</Button> </a>

  <div slot="main" class="landing-page__images">
    <img
      src={landingpageImageTwo.src}
      class="landing-page__image"
      alt="Girl model in hoodie"
    />
    <img
      src={landingpageImageOne.src}
      class="landing-page__image"
      alt="Guy model in hoodie"
    />
  </div>
</BaseLayout>

<style lang="scss">
  @import "../styles/_variables.scss";
  .landing-page {
    &__images {
      display: flex;
      flex-wrap: wrap;
      height: 100%;
    }

    &__image {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }
  }

  // Responsiv anpassning

  @media (min-width: $large-breakpoint) {
    .landing-page {
      &__images {
        height: 100%;
        overflow: hidden;
      }

      &__image {
        width: 50%;
      }
    }
  }


</style>

